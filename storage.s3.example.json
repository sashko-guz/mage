{
  "driver": "s3",
  "bucket": "my-bucket",
  "region": "us-west-1",
  "access_key": "YOUR_ACCESS_KEY",
  "secret_key": "YOUR_SECRET_KEY",
  "signature_secret": "your-secret-key-here",
  "s3_http_config": {
    "max_idle_conns": 150,
    "max_idle_conns_per_host": 150,
    "max_conns_per_host": 0,
    "idle_conn_timeout_sec": 90,
    "connect_timeout_sec": 10,
    "request_timeout_sec": 30,
    "response_header_timeout_sec": 10
  },
  "cache": {
    "sources": {
      "memory": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 512,
        "max_items": 200
      },
      "disk": {
        "enabled": true,
        "ttl_seconds": 1800,
        "max_size_mb": 5120,
        "max_items": 327680,
        "dir": "/var/cache/mage/sources",
        "clear_on_startup": false,
        "async_write": {
          "enabled": true,
          "num_workers": 4,
          "queue_size": 1000
        }
      }
    },
    "thumbs": {
      "memory": {
        "enabled": true,
        "ttl_seconds": 600,
        "max_size_mb": 1024,
        "max_items": 1000
      },
      "disk": {
        "enabled": true,
        "ttl_seconds": 7200,
        "max_size_mb": 10240,
        "max_items": 655360,
        "dir": "/var/cache/mage/thumbs",
        "clear_on_startup": false,
        "async_write": {
          "enabled": true,
          "num_workers": 4,
          "queue_size": 1000
        }
      }
    }
  }
}
