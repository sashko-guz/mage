{
  "driver": "local",
  "root": "/var/www/uploads",
  "signature_secret": "your-secret-key-here",
  "cache": {
    "sources": {
      "memory": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 256,
        "max_items": 100
      },
      "disk": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 2048,
        "dir": "/var/cache/mage/sources",
        "clear_on_startup": false
      }
    },
    "thumbs": {
      "memory": {
        "enabled": true,
        "ttl_seconds": 600,
        "max_size_mb": 512,
        "max_items": 500
      },
      "disk": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 10240,
        "dir": "/var/cache/mage/thumbs",
        "clear_on_startup": false
      }
    }
  }
}
