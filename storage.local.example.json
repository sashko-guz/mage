{
  "driver": "local",
  "root": "./.data",
  "signature_secret": "your-secret-key-here",
  "cache": {
    "sources": {
      "memory": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 256,
        "max_items": 100
      },
      "disk": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 2048,
        "max_items": 131072,
        "dir": "./.cache/sources",
        "clear_on_startup": false,
        "async_write": {
          "enabled": true,
          "num_workers": 4,
          "queue_size": 1000
        }
      }
    },
    "thumbs": {
      "memory": {
        "enabled": true,
        "ttl_seconds": 600,
        "max_size_mb": 512,
        "max_items": 500
      },
      "disk": {
        "enabled": true,
        "ttl_seconds": 300,
        "max_size_mb": 10240,
        "max_items": 655360,
        "dir": "./.cache/thumbs",
        "clear_on_startup": false,
        "async_write": {
          "enabled": true,
          "num_workers": 4,
          "queue_size": 1000
        }
      }
    }
  }
}
