# Storages Configuration
STORAGE_CONFIG_PATH=./storage.json

# Server Configuration
PORT=8080

# HTTP server hardening/timeouts (values are in seconds)
HTTP_READ_TIMEOUT_SECONDS=5
HTTP_READ_HEADER_TIMEOUT_SECONDS=2
HTTP_WRITE_TIMEOUT_SECONDS=30
HTTP_IDLE_TIMEOUT_SECONDS=120

# Maximum total size of request headers in bytes (default 1MB)
HTTP_MAX_HEADER_BYTES=1048576
