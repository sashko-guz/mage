# Storages Configuration
STORAGE_CONFIG_PATH=./storage.json

# Signature secret key for HMAC signature validation (optional)
SIGNATURE_SECRET=your-secret-key-here

# Server Configuration
PORT=8080

# Logging Configuration
LOG_LEVEL=error

# HTTP server hardening/timeouts (values are in seconds)
HTTP_READ_TIMEOUT_SECONDS=5
HTTP_READ_HEADER_TIMEOUT_SECONDS=2
HTTP_WRITE_TIMEOUT_SECONDS=30
HTTP_IDLE_TIMEOUT_SECONDS=120

# Maximum total size of request headers in bytes (default 1MB)
HTTP_MAX_HEADER_BYTES=1048576

# Maximum resize dimensions
# MAX_RESIZE_WIDTH / MAX_RESIZE_HEIGHT — per-axis pixel limits
# MAX_RESIZE_RESOLUTION — total pixel-area limit (width × height);
MAX_RESIZE_RESOLUTION=26214400
MAX_RESIZE_WIDTH=5120
MAX_RESIZE_HEIGHT=5120
